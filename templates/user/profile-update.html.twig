{% extends 'base.html.twig' %}

{% block body %}
    <div id="UpdateProfile" tabindex="-1"
         class="flex max-h-full w-full justify-center overflow-y-auto overflow-x-hidden p-8 md:inset-0">
        <div class="w-96 flex-col space-y-6 py-8 px-8 rounded-xl shadow">
            <h3 class="text-font-900 mb-4 text-xl font-medium">Update your profile</h3>

            {{ form_start(form) }}

            <div>
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'text-font-900 mb-2 mt-2 block text-sm font-medium'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'text-font-900 focus:ring-primary-500 focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm'}}) }}
            </div>

            <div>
                {{ form_label(form.phoneNumber, 'TÃ©l', {'label_attr': {'class': 'text-font-900 mb-2 mt-2  block text-sm font-medium'}}) }}
                {{ form_widget(form.phoneNumber, {'attr': {'class': 'text-font-900 focus:ring-primary-500 focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm'}}) }}
            </div>

            <div>
                <label for="country" class="text-font-900 mb-2 mt-2 block text-sm font-medium">Country</label>
                <div class="relative">
                    <select id="country" name="country" class="text-font-900 focus:ring-primary-500 focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm">
                        {% for code, language in country_codes %}
                            <option value="{{ code }}">
                                {{ language.language }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>


            <div>
                {{ form_label(form.gender, 'Gender', {'label_attr': {'class': 'text-font-900 mb-2 mt-2  block text-sm font-medium'}}) }}
                {{ form_widget(form.gender, {'attr': {'class': 'text-font-900 focus:ring-primary-500 focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm'}}) }}
            </div>

            <div>
                {{ form_label(form.visibility, 'Visibility', {'label_attr': {'class': 'text-font-900 mb-2 mt-2  block text-sm font-medium'}}) }}
                {{ form_widget(form.visibility, {'attr': {'class': 'text-font-900 focus:ring-primary-500 focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm'}}) }}
            </div>

            <div>
                {{ form_label(form.password, 'Password', {'label_attr': {'class': 'text-font-900 mb-2 mt-2  block text-sm font-medium'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'text-font-900 focus:ring-primary-500 focus:border-primary-500 block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm'}}) }}
            </div>

            <div>
                {{ form_label(form.customProfileCode, 'Profile photo', {'label_attr': {'class': 'text-font-900 mb-2 mt-2  block text-sm font-medium'}}) }}
                {{ form_widget(form.customProfileCode, {'attr': {'class': 'text-font-900 focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 text-sm'}}) }}
            </div>

            <button class="bg-primary-700 hover:bg-primary-800 focus:ring-primary-300 w-full rounded-lg px-5 py-2.5 text-center text-sm font-medium text-white focus:outline-none focus:ring-4">
                Update
            </button>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
