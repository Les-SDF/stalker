{% extends 'partials/flash-styles.html.twig'%}

{% block content %}
<div id="flash-messages-container" class="absolute right-4 bottom-4">
    {% for label, messages in app.flashes %}
        {% set styles = flashStyles[label] %}
        {% for message in messages %}
            <div id="toast-{{ label }}" class="flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800" role="alert">
                <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 {{ styles.textColor }} {{ styles.bgColor }} rounded-lg {{ styles.darkTextColor }} {{ styles.darkBgColor }}">
                    <i data-lucide="{{ styles.icon }}"></i>
                    <span class="sr-only">{{ label|capitalize }} icon</span>
                </div>
                <div class="ms-3 text-sm font-normal">{{ message }}</div>
                <button type="button" class="ms-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700" data-dismiss-target="#toast-{{ label }}" aria-label="Close">
                    <span class="sr-only">Close</span>
                    <i data-lucide="x"></i>
                </button>
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endblock %}